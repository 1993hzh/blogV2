# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Index.index
GET     /index                      controllers.Index.showPassages(page:Int?=1)
GET     /passage                    controllers.PassageController.passage(id:Int?=1)
GET     /message                    controllers.PassageController.getComments
POST    /comment                    controllers.PassageController.createComment
GET     /about                      controllers.Index.about
GET     /login                      controllers.Login.index
GET     /logout                     controllers.Login.logout
POST    /doLogin                    controllers.Login.login

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
